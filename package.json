{
	"name": "robert",
	"displayName": "Robert",
	"description": "VSCode extension project",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "robert.openView",
				"title": "Open Robert View",
				"category": "Robert"
			},
			{
				"command": "robert.refreshView",
				"title": "Refresh Robert View",
				"category": "Robert"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "robertExplorerView",
					"name": "Robert Explorer",
					"when": "true"
				}
			],
			"robert": [
				{
					"id": "robertMainView",
					"name": "Robert Main",
					"when": "true"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "robert",
					"title": "Robert",
					"icon": "$(robot)"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "robert.refreshView",
					"when": "view == robertMainView",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "robert.openView",
					"when": "true",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "biome check --write . && biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@types/node": "^24.3.0",
		"@types/vscode": "^1.103.0",
		"typescript": "^5.9.2"
	}
}
