{
	"name": "robert",
	"displayName": "IBM Robert",
	"description": "For IBM internal use only.",
	"version": "0.0.87",
	"type": "commonjs",
	"icon": "resources/icons/ibm-logo-bee.png",
	"publisher": "trevSmart",
	"repository": {
		"type": "git",
		"url": "https://github.com/trevSmart/robert.git"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/src/extension.js",
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"configuration": {
			"title": "Robert",
			"properties": {
				"robert.apiEndpoint": {
					"type": "string",
					"default": "https://rally.example.com",
					"description": "API endpoint for Robert extension"
				},
				"robert.refreshInterval": {
					"type": "number",
					"default": 30,
					"minimum": 5,
					"maximum": 3600,
					"description": "Refresh interval in seconds"
				},
				"robert.theme": {
					"type": "string",
					"enum": [
						"auto",
						"light",
						"dark",
						"high-contrast"
					],
					"default": "auto",
					"description": "Theme preference for Robert extension"
				},
				"robert.autoRefresh": {
					"type": "boolean",
					"default": true,
					"description": "Enable automatic refresh"
				},
				"robert.notifications": {
					"type": "boolean",
					"default": true,
					"description": "Show notifications"
				},
				"robert.debugMode": {
					"type": "boolean",
					"default": false,
					"description": "Enable debug mode"
				},
				"robert.advancedFeatures": {
					"type": "boolean",
					"default": false,
					"description": "Enable advanced features"
				},
				"robert.maxResults": {
					"type": "number",
					"default": 100,
					"minimum": 10,
					"maximum": 1000,
					"description": "Maximum number of results to display"
				},
				"robert.timeout": {
					"type": "number",
					"default": 5000,
					"minimum": 1000,
					"maximum": 60000,
					"description": "Request timeout in milliseconds"
				},
				"robert.rallyInstance": {
					"type": "string",
					"default": "https://rally1.rallydev.com",
					"description": "Rally instance URL (e.g., https://rally1.rallydev.com)"
				},
				"robert.rallyApiKey": {
					"type": "string",
					"default": "",
					"description": "Rally API key for authentication"
				},
				"robert.rallyProjectName": {
					"type": "string",
					"default": "",
					"description": "Rally project name to connect to"
				}
			}
		},
		"commands": [
			{
				"command": "robert.helloWorld",
				"title": "Hello World",
				"category": "IBM Robert"
			},
			{
				"command": "robert.openView",
				"title": "Open IBM Robert View",
				"category": "IBM Robert"
			},
			{
				"command": "robert.openMainView",
				"title": "Open Main View",
				"category": "IBM Robert"
			},
			{
				"command": "robert.openSettings",
				"title": "Open Settings",
				"icon": "$(gear)",
				"category": "IBM Robert"
			},
			{
				"command": "robert.openExtensionSettings",
				"title": "Open Extension Settings",
				"category": "IBM Robert"
			},
			{
				"command": "robert.showOutput",
				"title": "Show Robert Output",
				"category": "IBM Robert"
			},
			{
				"command": "robert.showPanelIfHidden",
				"title": "Show Robert Panel (if hidden)",
				"category": "IBM Robert"
			},
			{
				"command": "robert.example.async",
				"title": "Example: Async Error Handling",
				"category": "IBM Robert"
			},
			{
				"command": "robert.example.sync",
				"title": "Example: Sync Error Handling",
				"category": "IBM Robert"
			},
			{
				"command": "robert.example.manual",
				"title": "Example: Manual Error Handling",
				"category": "IBM Robert"
			},
			{
				"command": "robert.example.logging",
				"title": "Example: Logging Demo",
				"category": "IBM Robert"
			},
			{
				"command": "robert.example.fallback",
				"title": "Example: Fallback Values",
				"category": "IBM Robert"
			},
			{
				"command": "robert.debug.info",
				"title": "Debug: Show Debug Information",
				"category": "IBM Robert"
			},
			{
				"command": "robert.debug.enable",
				"title": "Debug: Enable Debug Mode",
				"category": "IBM Robert"
			},
			{
				"command": "robert.debug.disable",
				"title": "Debug: Disable Debug Mode",
				"category": "IBM Robert"
			},
			{
				"command": "robert.debug.toggle",
				"title": "Debug: Toggle Debug Mode",
				"category": "IBM Robert"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "robert",
					"title": "IBM Robert",
					"icon": "./resources/icons/ibm-logo-bee.svg"
				}
			]
		},
		"views": {
			"robert": [
				{
					"id": "robert.mainView",
					"name": "IBM Robert",
					"type": "webview",
					"icon": "./resources/icons/ibm-logo-bee.svg"
				}
			]
		},
		"customEditors": [
			{
				"viewType": "robert.editor",
				"displayName": "IBM Robert Editor",
				"selector": [
					{
						"filenamePattern": "*.robert"
					}
				],
				"priority": "default"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "robert.debug.toggle",
					"when": "view == robert.mainView",
					"group": "navigation",
					"icon": "$(debug)"
				},
				{
					"command": "robert.openSettings",
					"when": "view == robert.mainView",
					"group": "navigation",
					"icon": "$(settings-gear)"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile && npm run build:webview",
		"compile": "npm run format && npm run lint:fix && tsc -p ./",
		"watch": "tsc -p ./ -w",
		"build:webview": "vite build",
		"watch:webview": "vite build --watch",
		"lint": "eslint src/**/*.{ts,tsx} --ext .ts,.tsx",
		"lint:fix": "eslint src/**/*.{ts,tsx} --ext .ts,.tsx --fix",
		"format": "prettier --write \"src/**/*.{ts,tsx,json,js,md}\"",
		"format:check": "prettier --check \"src/**/*.{ts,tsx,json,js,md}\"",
		"version:patch": "npm version patch --no-git-tag-version",
		"package": "vsce package --out dist/",
		"package:pre-release": "vsce package --pre-release --out dist/",
		"package:patch": "npm run version:patch && npm run package",
		"install:cursor": "node scripts/installCursor.cjs",
		"install:vscode-insiders": "node scripts/installVSCodeInsiders.cjs",
		"publish": "vsce publish",
		"publish:pre-release": "vsce publish --pre-release"
	},
	"devDependencies": {
		"@types/node": "^25.0.3",
		"@types/vscode": "^1.74.0",
		"@typescript-eslint/eslint-plugin": "^8.52.0",
		"@typescript-eslint/parser": "^8.50.1",
		"@vscode/vsce": "^3.7.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"prettier": "^3.3.3",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@types/react": "^18.2.75",
		"@types/react-dom": "^18.2.25",
		"@types/styled-components": "^5.1.36",
		"@vitejs/plugin-react": "^5.1.2",
		"ibm-rally-node": "^0.0.15",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"striptags": "^3.2.0",
		"styled-components": "^6.1.19",
		"vite": "^7.3.0",
		"vscrui": "^0.3.0"
	}
}
