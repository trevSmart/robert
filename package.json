{
	"name": "robert",
	"displayName": "IBM Robert",
	"description": "For IBM internal use only.",
	"version": "0.1.8",
	"type": "commonjs",
	"icon": "resources/icons/robert-logo.png",
	"publisher": "trevSmart",
	"repository": {
		"type": "git",
		"url": "https://github.com/trevSmart/robert.git"
	},
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/src/extension.js",
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"configuration": {
			"title": "Robert",
			"properties": {
				"robert.apiEndpoint": {
					"type": "string",
					"default": "https://rally.example.com",
					"description": "API endpoint for Robert extension"
				},
				"robert.refreshInterval": {
					"type": "number",
					"default": 30,
					"minimum": 5,
					"maximum": 3600,
					"description": "Refresh interval in seconds"
				},
				"robert.theme": {
					"type": "string",
					"enum": [
						"auto",
						"light",
						"dark",
						"high-contrast"
					],
					"default": "auto",
					"description": "Theme preference for Robert extension"
				},
				"robert.autoRefresh": {
					"type": "boolean",
					"default": true,
					"description": "Enable automatic refresh"
				},
				"robert.notifications": {
					"type": "boolean",
					"default": true,
					"description": "Show notifications"
				},
				"robert.debugMode": {
					"type": "boolean",
					"default": false,
					"description": "Enable debug mode"
				},
				"robert.advancedFeatures": {
					"type": "boolean",
					"default": false,
					"description": "Enable advanced features"
				},
				"robert.maxResults": {
					"type": "number",
					"default": 100,
					"minimum": 10,
					"maximum": 1000,
					"description": "Maximum number of results to display"
				},
				"robert.timeout": {
					"type": "number",
					"default": 5000,
					"minimum": 1000,
					"maximum": 60000,
					"description": "Request timeout in milliseconds"
				},
				"robert.rallyInstance": {
					"type": "string",
					"default": "https://rally1.rallydev.com",
					"description": "Rally instance URL (e.g., https://rally1.rallydev.com)"
				},
				"robert.rallyApiKey": {
					"type": "string",
					"default": "",
					"description": "Rally API key for authentication"
				},
				"robert.rallyProjectName": {
					"type": "string",
					"default": "",
					"description": "Rally project name to connect to"
				}
			}
		},
		"commands": [
			{
				"command": "robert.openMainView",
				"title": "Open Main View",
				"category": "IBM Robert"
			},
			{
				"command": "robert.showOutput",
				"title": "Show Robert Output",
				"category": "IBM Robert"
			},
			{
				"command": "robert.reload",
				"title": "Reload",
				"category": "IBM Robert",
				"icon": "$(refresh)"
			},
			{
				"command": "robert.openInEditor",
				"title": "Open in Editor",
				"category": "IBM Robert",
				"icon": "$(screen-full)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "robert",
					"title": "IBM Robert",
					"icon": "./resources/icons/robert-logo-simple.png"
				}
			]
		},
		"views": {
			"robert": [
				{
					"id": "robert.mainView",
					"name": "IBM Robert",
					"type": "webview",
					"icon": "./resources/icons/robert-logo-simple.png"
				}
			]
		},
		"customEditors": [
			{
				"viewType": "robert.editor",
				"displayName": "IBM Robert Editor",
				"selector": [
					{
						"filenamePattern": "*.robert"
					}
				],
				"priority": "default"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "robert.reload",
					"when": "view == robert.mainView",
					"group": "navigation"
				},
				{
					"command": "robert.openInEditor",
					"when": "view == robert.mainView",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile && npm run build:webview",
		"compile": "npm run format && npm run lint:fix && tsc -p ./",
		"watch": "tsc -p ./ -w",
		"build:webview": "vite build",
		"watch:webview": "vite build --watch",
		"lint": "eslint src/**/*.{ts,tsx} --ext .ts,.tsx",
		"lint:fix": "node scripts/lint-fix.cjs",
		"format": "prettier --write \"src/**/*.{ts,tsx,json,js,md}\"",
		"format:check": "prettier --check \"src/**/*.{ts,tsx,json,js,md}\"",
		"version:patch": "npm version patch --no-git-tag-version",
		"package": "vsce package --out dist/",
		"package:pre-release": "vsce package --pre-release --out dist/",
		"package:patch": "npm run version:patch && npm run package",
		"install:cursor": "node scripts/installCursor.cjs",
		"install:vscode-insiders": "node scripts/installVSCodeInsiders.cjs",
		"publish": "vsce publish",
		"publish:pre-release": "vsce publish --pre-release"
	},
	"devDependencies": {
		"@types/node": "^25.0.10",
		"@types/react": "^18.2.75",
		"@types/react-dom": "^18.2.25",
		"@types/vscode": "^1.108.1",
		"@typescript-eslint/eslint-plugin": "^8.50.1",
		"@typescript-eslint/parser": "^8.54.0",
		"@vitejs/plugin-react": "^5.1.2",
		"@vscode/vsce": "^3.7.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^9.1.2",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-prettier": "^5.5.5",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"prettier": "^3.7.4",
		"rally": "^2.1.3",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@types/react-dnd": "^2.0.36",
		"@types/react-dom": "^18.2.25",
		"@vitejs/plugin-react": "^5.1.2",
		"@vscode/codicons": "^0.0.44",
		"echarts": "^6.0.0",
		"ibm-rally-node": "^0.0.15",
		"react": "^18.2.0",
		"react-dnd": "^16.0.1",
		"react-dnd-html5-backend": "^16.0.1",
		"react-dom": "^18.2.0",
		"striptags": "^3.2.0",
		"styled-components": "^6.3.8",
		"vite": "^7.3.0",
		"vscrui": "^0.3.0"
	}
}
