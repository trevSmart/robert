{
	"name": "robert-server",
	"version": "0.1.0",
	"description": "Backend server for Robert collaboration features",
	"main": "dist/index.js",
	"type": "commonjs",
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "ts-node-dev --respawn --transpile-only src/index.ts",
		"migrate": "node dist/migrations/runMigrations.js",
		"lint": "eslint src/**/*.ts",
		"format": "prettier --write \"src/**/*.ts\""
	},
	"dependencies": {
		"express": "^4.18.2",
		"ws": "^8.14.2",
		"pg": "^8.11.3",
		"uuid": "^9.0.1",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/ws": "^8.5.10",
		"@types/node": "^20.10.6",
		"@types/pg": "^8.10.9",
		"@types/uuid": "^9.0.7",
		"@types/cors": "^2.8.17",
		"typescript": "^5.9.3",
		"ts-node-dev": "^2.0.0"
	}
}
