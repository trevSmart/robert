{
	"compilerOptions": {
		"module": "nodenext",
		"target": "ES2020",
		"outDir": "out",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"sourceMap": true,
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": false,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "nodenext"
	},
	"include": ["src/**/*", "src/types/**/*", "test/**/*"],
	"exclude": ["node_modules", ".vscode-test", "out", "**/*.test.*", "src/webview/**/*"]
}
